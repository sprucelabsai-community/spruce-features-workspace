{
	"compilerOptions": {
		"skipLibCheck": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2019",
		"lib": [
			"es2019"
		],
		"declaration": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"sourceMap": false,
	},
    "references": [
        { "path": "./packages/spruce-conversation-plugin/" },
		{ "path": "./packages/spruce-deploy-plugin/" },
		{ "path": "./packages/spruce-event-plugin/" },
		{ "path": "./packages/spruce-skill-booter/" },
		{ "path": "./packages/spruce-store-plugin/" },
		{ "path": "./packages/spruce-test-fixtures/" },
    ]
}