{
	"debug.node.autoAttach": "off",
	"git.ignoreLimitWarning": true,
	"javascript.validate.enable": false,
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/build/**": true,
		"**/browser/**": true,
		"**/node_modules/**": true,
	},
	"search.exclude": {
		"**/node_modules/**": true,
		"**/browser/**": false,
	},
	
	"[javascript]": {
		"editor.formatOnSave": false
	},
	"[javascriptreact]": {
		"editor.formatOnSave": false
	},
	"[typescript]": {
		"editor.formatOnSave": false
	},
	"[typescriptreact]": {
		"editor.formatOnSave": false
	},
	"[handlebars]": {
		"editor.formatOnSave": false
	},
	"eslint.workingDirectories": [
		"./packages/spruce-conversation-plugin",
		"./packages/spruce-event-plugin",
		"./packages/spruce-skill-booter",
		"./packages/spruce-test-fixtures",
		"./packages/spruce-deploy-plugin",
		"./packages/spruce-store-plugin"
	],
	"eslint.lintTask.options": "--cache",
	"typescript.preferences.importModuleSpecifier": "relative",
	"cSpell.ignorePaths": [
		"**/package-lock.json",
		"**/node_modules/**",
		"**/build/**",
		"**/browser/**",
		"**/vscode-extension/**",
		"**/.git/objects/**",
		".vscode",
		".spruce"
	],
	"cSpell.words": [
		"arkit",
		"autogenerated",
		"spreedsheet"
	],
	"files.exclude": {},
	"typescript.tsdk": "node_modules/typescript/lib",
	"task.allowAutomaticTasks": "on",
	"eslint.enable": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"typescript.validate.enable": false,
	"editor.formatOnSave": false,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "always"
	}
}
