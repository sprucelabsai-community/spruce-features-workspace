{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "problem.watcher",
            "command": "yarn",
            "group": "build",
            "args": [
                "tsc-watch",
                "--noClear",
                "-b",
                "-w"
            ],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "focus": false
            },
            "problemMatcher": {
                "base": "$tsc-watch",
                "applyTo": "allDocuments"
            }
        },
        {
            "type": "npm",
            "script": "watch.build.dev",
            "group": "build",
            "problemMatcher": [],
            "label": "watch.build.dev",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "promptOnClose": false,
            "presentation": {
                "panel": "dedicated",
                "reveal": "silent"
            }
        },
        {
            "label": "conversation.test.reporter",
            "command": "spruce",
            "args": [
                "test",
                "--shouldHoldAtStart",
                "true",
                "--watchMode",
                "smart"
            ],
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceFolder}/packages/spruce-conversation-plugin"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "event-plugin.test.reporter",
            "command": "spruce",
            "args": [
                "test",
                "--shouldHoldAtStart",
                "true",
                "--watchMode",
                "smart"
            ],
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceFolder}/packages/spruce-event-plugin"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "skill-booter.test.reporter",
            "command": "spruce",
            "args": [
                "test",
                "--shouldHoldAtStart",
                "true",
                "--watchMode",
                "smart"
            ],
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceFolder}/packages/spruce-skill-booter"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "test-fixtures.test.reporter",
            "command": "spruce",
            "args": [
                "test",
                "--shouldHoldAtStart",
                "true",
                "--watchMode",
                "smart"
            ],
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceFolder}/packages/spruce-test-fixtures"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "deploy.test.reporter",
            "command": "spruce",
            "args": [
                "test",
                "--shouldHoldAtStart",
                "true",
                "--watchMode",
                "smart"
            ],
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceFolder}/packages/spruce-deploy-plugin"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "store.test.reporter",
            "command": "spruce",
            "args": [
                "test",
                "--shouldHoldAtStart",
                "true",
                "--watchMode",
                "smart"
            ],
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceFolder}/packages/spruce-store-plugin"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "shell",
            "type": "shell",
            "command": "${input:command} ${input:optionsCommand}",
            "options": {
                "cwd": "${workspaceFolder}/packages/spruce-${input:pluginName}-plugin"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "clear": false
            }
        },
        {
            "label": "spruce",
            "type": "shell",
            "command": "spruce ${input:spruceCommand}",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/packages/spruce-${input:pluginName}-plugin"
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "clear": false
            }
        },
    ],
    "inputs": [
        {
            "id": "pluginName",
            "description": "plugin name",
            "type": "promptString",
        },
        {
            "id": "spruceCommand",
            "description": "spruce command",
            "default": "create.test",
            "type": "promptString"
        },
        {
            "id": "command",
            "description": "command",
            "default": "yarn",
            "type": "promptString"
        },
        {
            "id": "optionsCommand",
            "description": "optionsCommand",
            "default": "add",
            "type": "promptString"
        }
    ]
}