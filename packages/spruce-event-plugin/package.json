{
	"name": "@sprucelabs/spruce-event-plugin",
	"publishConfig": {
		"access": "public"
	},
	"version": "1.8.6",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"license": "MIT",
	"files": [
		"build/**/*",
		"tsconfig.json"
	],
	"description": "Some helpful utilities to speed up working with Mercury! ðŸš…",
	"keywords": [
		"node",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-features-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-features-workspace/issues"
	},
	"scripts": {
		"build": "yarn build.babel && yarn build.types.resolve-paths.lint",
		"build.babel": "babel src --out-dir build --extensions '.ts, .tsx' --source-maps --copy-files",
		"build.resolve-paths": "resolve-path-aliases --target build --patterns **/*.js,**/*.d.ts",
		"build.types": "tsc --emitDeclarationOnly && echo PASS TYPES || (echo FAIL TYPES && false)",
		"build.types.resolve-paths.lint": "yarn build.types && yarn resolve-paths.lint",
		"clean": "rm -rf build/",
		"clean.all": "yarn clean && rm yarn.lock | true && rm -rf node_modules/",
		"fix.lint": "eslint --fix '**/*.ts'",
		"lint": "eslint '**/*.ts'",
		"rebuild": "yarn clean.all && yarn && yarn build",
		"resolve-paths.lint": "yarn build.resolve-paths && yarn lint",
		"test": "jest",
		"upgrade.packages": "yarn-upgrade-all && rm yarn.lock ; yarn ; yarn fix.lint | true",
		"upgrade.packages.all": "yarn install && yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test",
		"watch.build": "concurrently 'yarn build.types.resolve-paths.lint' 'tsc --emitDeclarationOnly -w' 'yarn build.babel --watch' \"chokidar 'src/**/*' --ignore '.*/tmp/.*' -c 'yarn resolve-paths.lint'\"",
		"watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
		"watch.rebuild": "yarn clean.all && yarn && yarn build.watch",
		"watch.tests": "yarn test --watch"
	},
	"dependencies": {
		"@sprucelabs/error": "latest",
		"@sprucelabs/mercury-types": "latest",
		"@sprucelabs/schema": "latest",
		"@sprucelabs/spruce-core-schemas": "latest",
		"@sprucelabs/spruce-event-utils": "latest",
		"@sprucelabs/spruce-skill-utils": "latest",
		"@sprucelabs/spruce-test-fixtures": "^1.8.6",
		"@sprucelabs/test": "latest",
		"@sprucelabs/test-utils": "latest"
	},
	"devDependencies": {
		"@sprucelabs/babel-plugin-schema": "latest",
		"@sprucelabs/jest-json-reporter": "latest",
		"@sprucelabs/mercury-client": "^15.2.15",
		"@sprucelabs/semantic-release": "latest",
		"@types/node": "^14.14.25",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.3.0",
		"conventional-changelog-sprucelabs": "latest",
		"eslint": "^7.19.0",
		"eslint-config-spruce": "latest"
	},
	"jest": {
		"maxWorkers": 6,
		"testTimeout": 300000,
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
		}
	},
	"yarn-upgrade-all": {
		"ignore": [
			"socket.io",
			"socket.io-client",
			"@sprucelabs/babel-plugin-schema",
			"@sprucelabs/jest-json-reporter",
			"@sprucelabs/semantic-release",
			"@sprucelabs/error",
			"@sprucelabs/mercury-types",
			"@sprucelabs/schema",
			"@sprucelabs/spruce-core-schemas",
			"@sprucelabs/test",
			"@sprucelabs/test-utils",
			"@sprucelabs/spruce-skill-utils",
			"@sprucelabs/spruce-event-utils",
			"conventional-changelog-sprucelabs",
			"eslint-config-spruce"
		]
	}
}
