{
  "name": "@sprucelabs/spruce-event-plugin",
  "publishConfig": {
    "access": "public"
  },
  "skill": {
    "namespace": "event",
    "upgradeIgnoreList": [
      "@types/node",
      "@sprucelabs/spruce-test-fixtures"
    ]
  },
  "version": "66.0.19",
  "files": [
    "build/**/*",
    "!build/__tests__",
    "!build/esm/__tests__",
    "tsconfig.json"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "license": "MIT",
  "description": "Some helpful utilities to speed up working with Mercury! ðŸš…",
  "keywords": [
    "node",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/spruce-features-workspace",
  "bugs": {
    "url": "https://github.com/sprucelabsai/spruce-features-workspace/issues"
  },
  "scripts": {
    "build.ci": "yarn run build.tsc && yarn run build.resolve-paths && yarn run lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dev": "yarn run build.tsc --sourceMap ; yarn run resolve-paths.lint",
    "build.dist": "tsc --project tsconfig.dist.json && yarn build.resolve-paths && mv build esm && yarn build.esm-postbuild && yarn build.tsc && yarn build.resolve-paths && mv esm build/ && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn run clean.build",
    "clean.all": "yarn run clean.dependencies && yarn run clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "clean.dist": "true",
    "fix.lint": "cd ../ && yarn fix.lint",
    "fix.lint.local": "export NODE_OPTIONS=--max-old-space-size=12288; eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "rebuild": "cd .. && yarn rebuild",
    "resolve-paths.lint": "yarn run build.resolve-paths ; yarn run lint",
    "test": "jest",
    "update.dependencies": "cd ../ && yarn update.dependencies",
    "post.watch.build": "yarn run build.copy-files && yarn run build.resolve-paths",
    "spruce.upgrade": "spruce upgrade",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn run post.watch.build'",
    "watch.rebuild": "yarn run clean.all && yarn install && yarn run watch.build.dev",
    "watch.tsc": "tsc -w",
    "lint.tsc": "tsc -p . --noEmit"
  },
  "dependencies": {
    "@sprucelabs/error": "^6.0.577",
    "@sprucelabs/mercury-types": "^47.2.28",
    "@sprucelabs/schema": "^31.0.44",
    "@sprucelabs/spruce-core-schemas": "^40.1.634",
    "@sprucelabs/spruce-event-utils": "^40.2.32",
    "@sprucelabs/spruce-skill-booter": "^66.0.19",
    "@sprucelabs/spruce-skill-utils": "^31.2.47",
    "@sprucelabs/spruce-test-fixtures": "^66.0.19"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^6.0.547",
    "@sprucelabs/jest-json-reporter": "^8.0.578",
    "@sprucelabs/mercury-client": "^42.0.733",
    "@sprucelabs/mercury-core-events": "^26.0.9",
    "@sprucelabs/resolve-path-aliases": "^2.0.531",
    "@sprucelabs/semantic-release": "^5.0.2",
    "@sprucelabs/test": "^9.0.71",
    "@sprucelabs/test-utils": "^5.3.3",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.1",
    "eslint-config-spruce": "^11.2.26",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "prettier": "^3.5.1",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "maxWorkers": 2,
    "testTimeout": 300000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/esm/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
