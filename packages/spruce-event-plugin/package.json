{
	"name": "@sprucelabs/spruce-event-plugin",
	"publishConfig": {
		"access": "public"
	},
	"version": "1.0.4",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"license": "MIT",
	"files": [
		"build/**/*",
		"tsconfig.json"
	],
	"description": "Some helpful utilities to speed up working with Mercury! ðŸš…",
	"keywords": [
		"node",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-features-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-features-workspace/issues"
	},
	"scripts": {
		"build": "yarn build.babel && yarn build.types",
		"build.types": "tsc --emitDeclarationOnly && echo 'TYPES PASS'",
		"build.babel": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps --copy-files",
		"rebuild": "cd .. && yarn rebuild",
		"clean": "rm -rf build",
		"clean.all": "rm -rf node_modules && rm -f yarn.lock && yarn clean",
		"lint": "eslint '**/*.ts' && echo 'LINT PASS'",
		"fix.lint": "eslint --fix '**/*.ts'",
		"release": "semantic-release",
		"test": "jest",
		"watch.tests": "jest --watch",
		"watch.build": "concurrently 'yarn build.types' 'yarn lint' 'yarn run build.babel --watch' \"chokidar 'src/**/*' -c 'clear ; yarn build.types'\" \"chokidar 'src/**/*' -c 'yarn lint'\"",
		"watch.lint": "chokidar 'src/**/*' -c 'yarn lint.tsc'",
		"upgrade.packages": "yarn-upgrade-all && rm yarn.lock ; yarn ; yarn lint.fix | true",
		"upgrade.packages.all": "yarn install && yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test"
	},
	"dependencies": {
		"@sprucelabs/error": "latest",
		"@sprucelabs/mercury-types": "latest",
		"@sprucelabs/schema": "latest",
		"@sprucelabs/spruce-core-schemas": "latest",
		"@sprucelabs/spruce-event-utils": "latest",
		"@sprucelabs/spruce-skill-utils": "latest",
		"@sprucelabs/spruce-test-fixtures": "^1.0.4",
		"@sprucelabs/test": "latest",
		"@sprucelabs/test-utils": "latest"
	},
	"devDependencies": {
		"@sprucelabs/babel-plugin-schema": "latest",
		"@sprucelabs/jest-json-reporter": "latest",
		"@sprucelabs/semantic-release": "latest",
		"@types/node": "^14.14.22",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.3.0",
		"conventional-changelog-sprucelabs": "^1.1.2",
		"eslint": "^7.18.0",
		"eslint-config-spruce": "^10.9.135",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"prettier": "^2.2.1",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3",
		"yarn-upgrade-all": "^0.5.4"
	},
	"jest": {
		"maxWorkers": 4,
		"testTimeout": 300000,
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/",
			"<rootDir>/build/__tests__/testDirsAndFiles/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
		}
	},
	"yarn-upgrade-all": {
		"ignore": [
			"socket.io",
			"socket.io-client",
			"@sprucelabs/babel-plugin-schema",
			"@sprucelabs/jest-json-reporter",
			"@sprucelabs/semantic-release",
			"@sprucelabs/error",
			"@sprucelabs/mercury-types",
			"@sprucelabs/schema",
			"@sprucelabs/spruce-core-schemas",
			"@sprucelabs/test",
			"@sprucelabs/test-utils",
			"@sprucelabs/spruce-skill-utils",
			"@sprucelabs/spruce-event-utils"
		]
	}
}
