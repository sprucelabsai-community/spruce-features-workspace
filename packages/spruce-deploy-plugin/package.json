{
  "name": "@sprucelabs/spruce-deploy-plugin",
  "publishConfig": {
    "access": "public"
  },
  "version": "5.5.36",
  "files": [
    "build/**/*",
    "!build/__tests__",
    "!build/esm/__tests__",
    "tsconfig.json"
  ],
  "skill": {
    "namespace": "deploy",
    "upgradeIgnoreList": [
      "@sprucelabs/spruce-core-schemas",
      "@sprucelabs/spruce-test-fixtures"
    ]
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "license": "MIT",
  "description": "Spruce Deploy! ðŸš€",
  "keywords": [
    "node",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/spruce-features-workspace",
  "bugs": {
    "url": "https://github.com/sprucelabsai/spruce-features-workspace/issues"
  },
  "scripts": {
    "build.ci": "yarn build.tsc && yarn build.resolve-paths && yarn lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dev": "yarn build.tsc --sourceMap ; yarn resolve-paths.lint",
    "build.dist": "yarn build.tsc && tsc --project tsconfig.dist.json && yarn build.resolve-paths && yarn build.esm-postbuild",
    "build.esm-postbuild": "esm-postbuild --target build/esm --patterns '**/*.js'",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "cd ../ && yarn fix.lint",
    "fix.lint.local": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "rebuild": "cd .. && yarn rebuild",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "jest",
    "update.dependencies": "cd ../ && yarn update.dependencies",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev",
    "watch.tsc": "tsc -w",
    "lint.tsc": "tsc -p . --noEmit"
  },
  "dependencies": {
    "@sprucelabs/error": "^5.0.258",
    "@sprucelabs/schema": "^25.3.391",
    "@sprucelabs/spruce-event-utils": "^16.0.584",
    "@sprucelabs/spruce-skill-booter": "^5.5.36",
    "@sprucelabs/spruce-skill-utils": "^20.6.340",
    "heroku-client": "^3.1.0"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^1.0.274",
    "@sprucelabs/jest-json-reporter": "^6.0.222",
    "@sprucelabs/mercury-client": "^16.13.152",
    "@sprucelabs/mercury-types": "^26.1.571",
    "@sprucelabs/resolve-path-aliases": "^1.0.220",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@sprucelabs/test": "^7.7.210",
    "@sprucelabs/test-utils": "^3.0.232",
    "@types/inquirer": "^8.1.3",
    "@types/node": "^16.11.4",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.3.0",
    "conventional-changelog-sprucelabs": "^1.1.2",
    "eslint": "^8.1.0",
    "eslint-config-spruce": "^10.10.15",
    "inquirer": "^8.2.0",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.5.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "maxWorkers": 4,
    "testTimeout": 300000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/esm/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
