{
	"compilerOptions": {
		"skipLibCheck": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2020",
		"lib": [
			"DOM",
			"es2017"
		],
		"declaration": true,
		"noImplicitAny": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "build",
		"baseUrl": "src",
		"experimentalDecorators": true,
		"paths": {
			"#spruce/*": [
				".spruce/*"
			]
		}
	},
	"include": [
		"./src/*.ts",
		"./src/**/*.ts",
		"./src/.spruce/**/*",
		"./src/__tests__/**/.spruce/**/*.ts"
	],
	"exclude": [
		"build",
		"esm"
	]
}
