{
  "name": "@sprucelabs/spruce-skill-booter",
  "publishConfig": {
    "access": "public"
  },
  "version": "52.5.37",
  "files": [
    "build/**/*",
    "!build/__tests__",
    "!build/esm/__tests__",
    "tsconfig.json"
  ],
  "skill": {
    "upgradeIgnoreList": [
      "@types/node",
      "@sprucelabs/spruce-test-fixtures"
    ]
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "license": "MIT",
  "description": "Loosely coupled classes and functions to make skill development faster! üèé",
  "keywords": [
    "node",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/spruce-features-workspace",
  "bugs": {
    "url": "https://github.com/sprucelabsai/spruce-features-workspace/issues"
  },
  "scripts": {
    "build.ci": "yarn build.tsc && yarn build.resolve-paths && yarn lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dev": "yarn build.tsc --sourceMap ; yarn resolve-paths.lint",
    "build.dist": "tsc --project tsconfig.dist.json && yarn build.resolve-paths && mv build esm && yarn build.esm-postbuild && yarn build.tsc && yarn build.resolve-paths && mv esm build/ && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "clean.dist": "true",
    "fix.lint": "cd ../ && yarn fix.lint",
    "fix.lint.local": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "jest",
    "update.dependencies": "cd ../ && yarn update.dependencies",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "spruce.upgrade": "spruce upgrade",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev",
    "watch.tsc": "tsc -w",
    "lint.tsc": "tsc -p . --noEmit"
  },
  "dependencies": {
    "@sprucelabs/error": "^5.0.564",
    "@sprucelabs/schema": "^28.5.98",
    "@sprucelabs/spruce-skill-utils": "^28.1.43",
    "@sprucelabs/test-utils": "^3.2.91"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^2.0.68",
    "@sprucelabs/jest-json-reporter": "^6.0.549",
    "@sprucelabs/resolve-path-aliases": "^1.1.156",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@sprucelabs/test": "^7.7.406",
    "@types/node": "17.0.5",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.31.0",
    "eslint-config-spruce": "^10.11.7",
    "jest": "^29.3.1",
    "jest-circus": "^29.3.1",
    "prettier": "^2.8.2",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "jest": {
    "maxWorkers": 2,
    "testTimeout": 300000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/",
      "<rootDir>/build/esm/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    },
    "reporters": [
      "default",
      [
        "@sprucelabs/jest-sheets-reporter",
        {
          "sheetId": "1DoWM7mYgGDa-PJXptLomrZmbIBZiuxS1YiAsRXU2Gm0",
          "worksheetId": 889384139,
          "testMap": {
            "letsYouSpecifyWhichFeaturesToLoad": "P6"
          }
        }
      ]
    ]
  }
}
