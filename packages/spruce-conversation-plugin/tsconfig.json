{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2019",
		"lib": [
			"DOM",
			"es2019"
		],
		"declaration": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"sourceMap": false,
		"outDir": "build",
		"baseUrl": "src",
		"paths": {
			"#spruce/*": [
				".spruce/*"
			]
		},
		"composite": true
	},
	"include": [
		"./src/*.ts",
		"./src/**/*.ts",
		"./src/.spruce/**/*",
		"./src/__tests__/testDirsAndFiles/bad-skill/build/conversations/bookAppointment.topic.js",
		"./src/__tests__/**/.spruce/**/*.ts"
	],
	"exclude": [
		"build",
		"esm"
	]
}