{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2019",
		"lib": [
			"es2019"
		],
		"declaration": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": "src",
		"paths": {
			"#spruce/*": [
				".spruce/*"
			]
		}
	},
	"include": [
		"./*.ts",
		"./**/*.ts",
		"../spruce-test-fixtures/src/errors/invalidViewController.builder.ts",
		"../spruce-test-fixtures/src/__tests__/behavioral/Routing.test.ts"
, "../spruce-test-fixtures/src/errors/unknownViewControllerError.builder.ts"	],
	"exclude": [
		"build"
	]
}